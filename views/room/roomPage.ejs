<!DOCTYPE html>
<html lang="en">
  <%- include("../layouts/header")%>
  <body>
    <%- include("../layouts/navbar")%>
    <div class="container my-3">
      <div class="row text-center">
        <h5>Rooms Page</h5>
        <div class="col-12 text-end">
          <a class="btn btn-primary" href="/rooms/add" role="button">Add Room</a>
        </div>
      </div>
      <div class="row">
        <div class="col-12 my-2">
            <!-- TABLE -->
            <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% rooms.forEach(room => { %>
                    <tr>
                        <td><%= room.id %></td>
                        <td>
                            <div class="row">
                                <div class="col-6">
                                    <img class="img-fluid rounded-circle" src="<%= room.image %>" alt="" srcset="">
                                </div>
                                <div class="col-6">
                                    <h6><%= room.name %></h6>
                                </div>
                            </div>
                        </td>
                        <td>Rp. <%= room.price %></td>
                        <td>
                            <a class="btn btn-warning" href="/rooms/update/<%=room.id%>" role="button">Update</a>
                            <a class="btn btn-danger" href="/rooms/delete/<%=room.id%>" role="button">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
      </div>
      <div class="row text-center my-2">
      </div>
    </div>
    <%- include("../layouts/footer")%>
    <%- include("../layouts/script")%>
  </body>
</html>

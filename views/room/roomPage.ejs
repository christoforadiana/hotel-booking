<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Booking Hotel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <nav id="navbar">
        <div class="container">
            <h1 class="logo"><a href="/"><span class="text-primary">First</span> Hotel</a></h1>
            <ul>
                <li ><a class="current" href="/">Home</a></li>
                <li><a href="/customers">Customers</a></li>
                <li><a href="/rooms">Rooms</a></li>
                <li><a href="/bookings">Bookings</a></li>
            </ul>
        </div>
    </nav>
    <div class="container my-3">
      <div class="row text-center">
        <h5>Rooms Page</h5>
        <div class="col-12 text-end">
          <a class="btn btn-primary" href="/rooms/add" role="button">Add Room</a>
        </div>
      </div>
      <div class="row">
        <div class="col-12 my-2">
            <!-- TABLE -->
            <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% rooms.forEach(room => { %>
                    <tr>
                        <td><%= room.id %></td>
                        <td>
                            <div class="row">
                                <div class="col-2">
                                    <img class="img-fluid rounded-circle" src="<%= room.image %>" alt="" srcset="">
                                </div>
                                <div class="col-10">
                                    <h6><%= room.name %></h6>
                                </div>
                            </div>
                        </td>
                        <td>Rp. <%= room.price %></td>
                        <td>
                            <a class="btn btn-warning" href="/rooms/update/<%=room.id%>" role="button">Update</a>
                            <a class="btn btn-danger" href="/rooms/delete/<%=room.id%>" role="button">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
      </div>
      <div class="row text-center my-2">
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>new DataTable('#example');</script>
  </body>
</html>

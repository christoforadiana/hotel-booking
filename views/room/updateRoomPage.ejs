<!DOCTYPE html>
<html lang="en">
  <%- include("../layouts/header")%>
  <body>
    <%- include("../layouts/navbar")%>
    <div class="container my-3">
      <div class="row text-center">
        <h5>Update Rooms Page</h5>
      </div>
      <div class="row">
        <div class="col-12 my-2">
            <form action="<%=room.id%>" method="post">
                <div class="form-group mb-3">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%=room.name%>">
                </div>
                <div class="form-group mb-3">
                    <label for="image">Image URL</label>
                    <input type="text" class="form-control" id="image" name="image" value="<%=room.image%>">
                </div>
                <div class="form-group mb-3">
                    <label for="number">Price</label>
                    <input type="text" class="form-control" id="number" name="number" value="<%=room.price%>">
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
      </div>
    </div>
  <%- include("../layouts/footer")%>
  <%- include("../layouts/script")%>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <%- include("../layouts/header")%>
  <body>
    <%- include("../layouts/navbar")%>
    <div class="container my-3">
      <div class="row text-center">
        <h5>Bookings Page</h5>
        <div class="col-12 text-end">
          <a class="btn btn-primary" href="/bookings/add" role="button">Add Booking</a>
        </div>
      </div>
      <div class="row">
        <div class="col-12 my-2">
            <!-- TABLE -->
            <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                <th>ID</th>
                <th>Room Name</th>
                <th>Customer Name</th>
                <th>Price</th>
                <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% bookings.forEach(booking => { %>
                    <tr>
                        <td><%= booking.id %></td>
                        <td>
                            <div class="row">
                                <div class="col-2">
                                    <img class="img-fluid rounded-circle" src="<%= booking.room.image %>" alt="" srcset="">
                                </div>
                                <div class="col-10">
                                    <h6><%= booking.room.name %></h6>
                                </div>
                            </div>
                        </td>
                        <td><%= booking.customer.name %></td>
                        <td>Rp. <%= booking.room.price %></td>
                        <td>
                            <a class="btn btn-primary" href="/bookings/detail/<%=booking.id%>" role="button">Detail</a>
                            <a class="btn btn-warning" href="/bookings/update/<%=booking.id%>" role="button">Update</a>
                            <a class="btn btn-danger" href="/bookings/delete/<%=booking.id%>" role="button">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
      </div>
      <div class="row text-center my-2">
      </div>
    </div>
  <%- include("../layouts/footer")%>
  <%- include("../layouts/script")%>
  </body>
</html>
